{
  "name": "@bitty/animate",
  "version": "2.0.2",
  "description": "Create and manage animation functions with AnimationFrame API.",
  "cdn": "dist/animate.js",
  "main": "dist/animate.cjs.js",
  "types": "dist/animate.d.ts",
  "unpkg": "dist/animate.js",
  "module": "dist/animate.es.js",
  "jsdelivr": "dist/animate.js",
  "umd:main": "dist/animate.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "lint": "prettier --check \"{src,test}/**/*.ts\"",
    "lint:fix": "prettier --write \"{src,test}/**/*.ts\"",
    "test": "TS_NODE_PROJECT=\"tsconfig.test.json\" ava test/*.ts",
    "build": "pnpm run build:transpile && pnpm run build:bundle",
    "build:transpile": "tsc -p ./tsconfig.build.json",
    "build:bundle": "bili dist/animate.js --format es,cjs,umd,umd-min --js buble",
    "prepublishOnly": "pnpm run test && pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VitorLuizC/animate.git"
  },
  "keywords": [
    "animation",
    "requestanimationframe",
    "game-loop",
    "gameloop",
    "loop",
    "interval",
    "timeout"
  ],
  "author": {
    "url": "https://vitorluizc.github.io/",
    "name": "Vitor Luiz Cavalcanti",
    "email": "vitorluizc@outlook.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VitorLuizC/animate/issues"
  },
  "homepage": "https://github.com/VitorLuizC/animate#readme",
  "devDependencies": {
    "ava": "^1.1.0",
    "bili": "^3.4.2",
    "prettier": "^2.0.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.9.5"
  },
  "ava": {
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "compileEnhancements": false
  }
}
