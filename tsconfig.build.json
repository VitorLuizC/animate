{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Transpile output settings
    "target": "ES5",
    "module": "ES2015",
    "charset": "utf-8",
    "newLine": "lf",
    "sourceMap": true,
    "outDir": "./dist",

    // Type declaration settings
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",

    // ECMAScript version settings
    "lib": ["ES5", "DOM"]
  },
  "include": ["./src/**/*.ts"]
}
